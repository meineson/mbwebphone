{
  "name": "mbwebphone",
  "version": "1.1.5",
  "main": "https://localhost:3000/app.html",
  "node-main": "miniweb.js",
  "node-remote": "https://localhost:3000",
  "chromium-args": "--ignore-certificate-errors --allow-http-screen-capture --allow-insecure-localhost --allow-running-insecure-content",
  "type": "commonjs",
  "devDependencies": {
    "nwjs-builder-phoenix": "^1.15.0"
  },
  "window": {
    "position": "center",
    "min_width": 640,
    "min_height": 480,
    "icon": "tray.png",
    "width": 1066,
    "height": 600,
    "always_on_top": false,
    "resizable": true 
  },
  "scripts": {
    "dev": "/Users/mac/nwjs/nwjs.app/Contents/MacOS/nwjs .",
    "dist": "mkdir -p ./out && tar zcvf ./out/mbwebphone.tgz index.html config.html *.js *.css *.ico *.png && build --tasks mac-x64,win-x64 .",    
    "start": "run --x64 .",
    "dmg": "hdiutil create -volname 'MBWebPhone' -srcfolder 'out/mbwebphone 1.1.5 mac x64/MBWebPhone.app' -ov -format UDZO './out/MBWebPhone.dmg'"
  },
  "author": "meineson",
  "license": "MIT",
  "build": {
    "appId": "mbwebphone.cn.mbstudio",
    "nwVersion": "0.101.2",
    "ffmpegIntegration": true,
    "packed": true,
    "output": "./out",
    "files": [
      "**/*"
    ],
    "targets": [
      "zip",
      "nsis7z"
    ],
    "outputPattern": "${NAME} ${VERSION} ${PLATFORM} ${ARCH}",
    "win": {
      "productName": "MBWebPhone",
      "companyName": "MBSTUDIO",
      "copyright": "copyright (C) mbstudio.cn",
      "icon": "favicon.ico"  
    },
    "mac": {
      "displayName": "MBWebPhone",
      "copyright": "copyright (C) mbstudio.cn",
      "icon": "logo.icns",
      "plistStrings": {
        "CFBundleIdentifier": "mbwebphone.cn.mbstudio",
        "CFBundleDocumentTypes": [],
        "NSCameraUsageDescription": "video call",
        "NSMicrophoneUsageDescription": "audio call"
      }
    },
    "nsis": {
      "icon": "favicon.ico",
      "languages": [
        "simpChinese"
      ]
    }
  }
}
